<!-- âœ… Script for Dark Mode Footer Toggle -->
<script>
  const footer = document.getElementById("mainFooter");

  window.addEventListener("load", () => {
    if (localStorage.getItem("theme") === "dark") {
      footer.classList.remove("bg-light", "text-dark");
      footer.classList.add("bg-dark", "text-light");
    }
  });

  const darkBtn = document.getElementById("darkToggle"); // Make sure this exists in navbar

  if (darkBtn) {
    darkBtn.addEventListener("click", () => {
      footer.classList.toggle("bg-dark");
      footer.classList.toggle("bg-light");
      footer.classList.toggle("text-light");
      footer.classList.toggle("text-dark");
    });
  }
</script>
